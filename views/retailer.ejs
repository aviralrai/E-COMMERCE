<form class="form-container" action="" method="get">

    <h1>ADD YOUR PRODUCT</h1>

    <div class="row">
        <div class="col-25">
            <label for="name">Product name:</label>
        </div>
        <div class="col-75">
            <input type="text" id="name" name="productname" placeholder="~$ eg. iphone" required>
