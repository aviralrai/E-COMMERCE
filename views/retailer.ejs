            <label for="price">Price</label>
        </div>
        <div class="col-75">
            <input type="number" id="price" name="price" placeholder="~$ eg. 100000 in Rs." required>
        </div>
    </div>

    <div class="row">
        <div class="col-25">
            <label for="det">Details:</label>
        </div>
        <div class="col-75">
            <input type="text" id="det" name="details" placeholder="~$ eg. 8gb ram | 12mp camera" required>
        </div>
    </div>

    <div class="row">
        <div class="col-25">
            <label for="link">Link of image</label>
        </div>
        <div class="col-75">
            <input type="text" id="link" name="link" placeholder="~$ eg. https://xyz.com" required>
        </div>
    </div>


